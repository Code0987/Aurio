<Window x:Class="AudioAlign.Test.MultitrackControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="485" Width="525" xmlns:my="clr-namespace:AudioAlign.WaveControls;assembly=AudioAlign.WaveControls">
    <Grid>
        <Button Content="Add Waveform" HorizontalAlignment="Left" Margin="12,0,0,12" Name="btnAddWaveform" Width="101" Height="23" VerticalAlignment="Bottom" Click="btnAddWaveform_Click" />
        <my:MultiTrackViewer Margin="13,12,13,77" Name="multiTrackViewer1" ViewportWidth="{Binding ElementName=slider1, Path=LogValue, Mode=TwoWay}">
            <StackPanel Name="multiTrackPanel" />
        </my:MultiTrackViewer>
        <my:LogSlider Height="23" HorizontalAlignment="Left" Margin="13,380,0,0" Name="slider1" VerticalAlignment="Top" Width="477" Maximum="1000000000000" Minimum="1" />
        <Label Content="{Binding ElementName=multiTrackViewer1, Path=ViewportWidth}" Height="28" HorizontalAlignment="Left" Margin="452,406,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
